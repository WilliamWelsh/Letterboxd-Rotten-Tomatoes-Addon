{
  "manifest_version": 2,
 
  "name": "Letterboxd Rotten Tomatoes Addon",
  "version": "1.7",
  "description": "Adds Rotten Tomatoes features to Letterboxd.com",
  
  "permissions": [
    "https://www.omdbapi.com/*",
	"https://www.rottentomatoes.com/m/*"
  ],
  
  "icons": {
		"16": "images/tomato.png",
		"32": "images/tomato.png",
		"48": "images/tomato.png",
		"128": "images/tomato.png"
    },
 
  "content_scripts": 
    [
        {
            "matches":["https://letterboxd.com/film*"],
            "js":["content.js"],
            "run_at": "document_end"
        }
    ]
 
}